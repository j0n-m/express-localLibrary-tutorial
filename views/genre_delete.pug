extends layout 
block content 
  h1 #{title} : #{genre.name}

  if genre_books.length
    p #[strong Delete the following books before attempting to delete this genre.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books:
      each book in genre_books
        dl
          dt
            a(href=book.url) #{book.title}
          dd=book.summary

  else 
    p Do you really want to delete this genre?
    form(method="POST") 
      div.form-group
        input#authorid.form-control(type="hidden", name="genreid", value=genre._id)
      input.btn.btn-primary(type="submit" value="Delete Genre")
